<% include partials/head.ejs %>
  <link rel="stylesheet" href="/stylesheets/css/jquery.bsPhotoGallery.css" />

  <style>
    @import url(https://fonts.googleapis.com/css?family=Bree+Serif);
    body {
      background: #ebebeb;
    }

    ul {
      padding: 0 0 0 0;
      margin: 0 0 40px 0;
    }

    ul li {
      list-style: none;
      margin-bottom: 10px;
    }

    .text {
      /*font-family: 'Bree Serif';*/
      color: #666;
      font-size: 11px;
      margin-bottom: 10px;
      padding: 12px;
      background: #fff;
    }
  </style>
  <div class="content-padding clearfix">
    <div class="row" style="text-align:center; border-bottom:1px dashed #ccc;  padding:0 0 20px 0; margin-bottom:40px;">
      <h2 style="font-family:'Bree Serif', arial; font-weight:bold;">Gallery</h2>
    </div>
    <% var j=0 %>
    <div class="row" style="text-align:center; border-bottom:1px dashed #ccc;  padding:0 0 20px 0; margin-bottom:40px;">
      <h3 style="font-family:'Bree Serif', arial; font-weight:bold; font-size:30px;">Consortium'17</h3>
    </div>
    <ul class="row first">
      <% for(;j < 8 ; j++){ %>
      <li>
        <img alt="<%= images[j].description %>" src="/images/<%= images[j].image %>">
        <div class="text"><%= images[j].description %></div>
      </li>
      <% } %>
    </ul>

    <div class="row" style="text-align:center; border-bottom:1px dashed #ccc;  padding:0 0 20px 0; margin-bottom:40px;">
      <h3 style="font-family:'Bree Serif', arial; font-weight:bold; font-size:30px;">Jugaad'16</h3>
    </div>
    <ul class="row first">
      <% for(;j < 12 ; j++){ %>
      <li>
        <img alt="<%= images[j].description %>" src="/images/<%= images[j].image %>">
        <div class="text"><%= images[j].description %></div>
      </li>
      <% } %>
    </ul>

    <div class="row" style="text-align:center; border-bottom:1px dashed #ccc;  padding:0 0 20px 0; margin-bottom:40px;">
      <h3 style="font-family:'Bree Serif', arial; font-weight:bold; font-size:30px;">Consortium'16</h3>
    </div>
    <ul class="row first">
      <% for(;j < 20 ; j++){ %>
      <li>
        <img alt="<%= images[j].description %>" src="/images/<%= images[j].image %>">
        <div class="text"><%= images[j].description %></div>
      </li>
      <% } %>
    </ul>

    <div class="row" style="text-align:center; border-bottom:1px dashed #ccc;  padding:0 0 20px 0; margin-bottom:40px;">
      <h3 style="font-family:'Bree Serif', arial; font-weight:bold; font-size:30px;">Jugaad'15</h3>
    </div>
    <ul class="row first">
      <% for(;j < 28 ; j++){ %>
      <li>
        <img alt="<%= images[j].description %>" src="/images/<%= images[j].image %>">
        <div class="text"><%= images[j].description %></div>
      </li>
      <% } %>
    </ul>

    <div class="row" style="text-align:center; border-bottom:1px dashed #ccc;  padding:0 0 20px 0; margin-bottom:40px;">
      <h3 style="font-family:'Bree Serif', arial; font-weight:bold; font-size:30px;">Consortium'13</h3>
    </div>
    <ul class="row first">
      <% for(;j < images.length ; j++){ %>
      <li>
        <img alt="<%= images[j].description %>" src="/images/<%= images[j].image %>">
        <div class="text"><%= images[j].description %></div>
      </li>
      <% } %>
    </ul>

  </div>

  <% include partials/footer.ejs %>
    <% include partials/scripts.ejs %>
    <script src="/js/jquery.bsPhotoGallery.js" type="text/javascript"></script>
    <script>
      $(document).ready(function() {
        $('ul.first').bsPhotoGallery({
          "classes": "col-lg-2 col-md-4 col-sm-3 col-xs-4 col-xxs-12",
          "hasModal": true,
          // "fullHeight" : false
        });
      });
    </script>
  </body>
  </html>
